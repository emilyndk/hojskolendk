---
// Props modtages her
const { header, text, url = "#", bgImg = "", view = "destinationer" } = Astro.props;
import Button from "./Button.astro";
---
<article
  class={`relative ${view === "destinationer" ? "destinationer-card" : "aktiviteter-card"} 
  bg-cover bg-center h-[500px] w-[350px] rounded overflow-hidden p-[20px] m-[10px]`} 
  style={`background-image: url(${bgImg})`}>

  <div 
    class={`flex flex-col justify-between h-full p-4 relative bg-opacity-70 bg-black`}>
    
    {view === "destinationer" ? (
      <>
       <h1 class=" text-center flex flex-col justify-center text-yellow-500 border border-yellow-500 
  rounded box-border w-[300px] h-[300px] font-display text-display-desktop-card">
  {header.split('\n').map((line) => (
    <>
      {line} <br />
    </>
  ))}
</h1>


       <div class="flex flex-col">
        <p class=" pb-padding font-body text-yellow-500 text-body-mobile-regular md:text-body-desktop-regular text-center">{text}</p>
        <Button type="primary" class="mx-auto mt-auto">
          <a href={url}>TILMELD NU</a>
        </Button>
       
      </div>

      </>
    ) : (
      <>
        <div class="flex flex-col justify-center flex-grow gap-[1rem]"> 
          <h1 class="text-center text-yellow-500 border border-yellow-500 
            rounded m-4 p-[15px] text-display-mobile-card font-display md:text-[2rem]">
            {header}
          </h1>

          <p class="font-body text-yellow-500 text-h2-mobile-S md:text-h2-desktop-S text-center">{text}</p>
        </div>

        <Button type="secondary" class="mx-auto "> <!-- Adds more space between the text and button -->
          <a href={url}>LÃ†S MERE</a>
        </Button>
      </>
    )}
  </div>
</article>
